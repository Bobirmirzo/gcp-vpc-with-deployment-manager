{% set GCE_SERVICE_ACCOUNT_DEFAULT_EMAIL = env["project_number"] +  "-compute@developer.gserviceaccount.com" %}
{% set PREFIX = env["deployment"] %}

resources:
- name: {{ properties["name"] }}
  type: compute.v1.instance
  properties:
    canIpForward: {{ properties["canIpForward"] }}
    zone: {{ properties["zone"] }}
    deletionProtection: {{ properties["deletionProtection"] }}
    machineType: {{ properties["machineType"] }}
    tags:
      items: {{ properties["tags_items"] }}
    displayDevice:
      enableDisplay: false
    reservationAffinity:
      consumeReservationType: ANY_RESERVATION
    serviceAccounts:
    - email: {{ GCE_SERVICE_ACCOUNT_DEFAULT_EMAIL }}
      scopes:
      - https://www.googleapis.com/auth/devstorage.read_only
      - https://www.googleapis.com/auth/logging.write
      - https://www.googleapis.com/auth/monitoring.write
      - https://www.googleapis.com/auth/servicecontrol
      - https://www.googleapis.com/auth/service.management.readonly
      - https://www.googleapis.com/auth/trace.append
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: {{ properties["autoDelete"] }}
      initializeParams:
        mode: READ_WRITE
        diskSizeGb: {{ properties["diskSizeGb"] }}
        diskType: {{ properties["diskType"] }}
        sourceImage: {{ properties["sourceImage"] }}
    networkInterfaces:
    - network: {{ properties["network"] }}
      subnetwork: {{ properties["subnetwork"] }}
      {% if properties["use_global_ip"]==true %}
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
        networkTier: {{ properties["networkTier"] }}
        natIP: {{ properties["natIP"] }}
      {% endif %}